<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/clickCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white" >

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="UUID"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/UUID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white" >
            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="Sendtime"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/Sendtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white" >
            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="Readtime"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/Readtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white" >
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="Dest Name"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/targetName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white" >
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="Dest MAC"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/targetMAC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/read"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:srcCompat="@android:drawable/presence_online" />

        <ImageView
            android:id="@+id/unread"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/presence_invisible" />


        <ImageView
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:srcCompat="@android:drawable/presence_online" />

        <ImageView
            android:id="@+id/unupload"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/presence_offline" />


            <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp" />
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>